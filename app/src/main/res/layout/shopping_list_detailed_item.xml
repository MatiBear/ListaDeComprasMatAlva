<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shoppingItemImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="153dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shoppingItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/shoppingItemType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/shoppingPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio por X: $0"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/shoppingItemType2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tienda"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/shoppingCurrentAmount"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:hint="Cantidad"
                android:inputType="numberDecimal"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/shoppingTotalCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cantidad: "
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/removeItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remover"
        android:textSize="14sp" />

</LinearLayout>